<Window x:Class="Firealarm.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Firealarm"
        mc:Ignorable="d"
        x:Name="Me"
        Title="MainWindow" d:DesignHeight="350" d:DesignWidth="525">

    <Window.Resources>
     
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        
       
        <StackPanel Grid.Column="0" 
                    Background="{StaticResource PrimaryDarkColorBrush}"
                    Width="Auto"
                    Height="{Binding RelativeSource={RelativeSource AncestorType=Window,AncestorLevel=1}, Path=ActualHeight}">
            
        </StackPanel>
    
        <Grid Grid.Column="1" >

            <Button Height="30" Width="150" IsEnabled="False" Content="Hello World" />
        </Grid>
       

    </Grid>
</Window>
