             xmlns:local="clr-namespace:Firealarm"
             StartupUri="BaseWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Colors/WindowColors.xaml"/>
